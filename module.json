    {
      "name": "family-moves",
      "label": "Family Moves",
      "path": "packs/family-moves",
      "type": "Item",
      "system": "pbta",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    }
  ],
  "url": "#{URL}#",
  "manifest": "#{MANIFEST}#",
  "download": "#{DOWNLOAD}#",
