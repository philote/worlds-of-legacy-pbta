      "system": "pbta",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "name": "playbooks",
      "label": "Playbooks",
      "path": "packs/playbooks",
      "type": "Item",
      "system": "pbta",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
